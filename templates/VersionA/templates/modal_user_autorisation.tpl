<body id="forms"
    class="full-layout no-nav-left no-nav-right nav-top-fixed background-login responsive remove-navbar login-layout clearfix"
    data-active="forms " data-smooth-scrolling="1" >


    <h3 align="center">Gestion des autorisations pour forcer les RDV</h3>


    <div class="tab-panel  col-sm-12" id="userfilte-tab">

        <div class="col-sm-12 panel-body" style="text-align:left;background-color: #5D9AD4;margin-top: 0 0;padding: 5px 30px;color: #ffffff;font-size: 13px;font-weight: bold;">
            Création
        </div>

        <div id="myModaldeclenche" style='display:block;padding-top: 32px;' class="col-md-12">
            {if $messageaffectation!=''}
                <div class="alert alert-success" >
                    <button type="button" class="close" data-dismiss="alert" aria-hidden="true"><i class="icon-cross"></i></button>
                    <span class="vd_alert-icon"><i class="fa fa-check-circle vd_green"></i></span>{$messageaffectation}
                </div>
            {/if}

            <div class="col-sm-12 panel-body" style="text-align: center;">

                <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.6-rc.0/js/select2.min.js"></script>
                <form class="form-horizontal" method="POST">
                    <input type="hidden" name="identifiant_user" value="{$identifiant_user}"/>
                    <input type="hidden" name="validation"  value="ajoututilisateur" />
                    <input type="hidden" name="actiontranche" value=""/>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Selectionnes les utilisateurs</label>
                        <div class="col-sm-10">
                            <select name="iduser[]" class="js-example-basic-multiple"  multiple="multiple" >

                                {foreach from=$aTableauListeUser item=objuser}
                                    <option value="{$objuser.id_user}"
                                            >{$objuser.nom_user} {$objuser.prenom_user}  ( {$objuser.nom_groupe} )</option>
                                {/foreach}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <button class="btn vd_btn vd_bg-green" type="submit" style="margin-top:15px;">
                            Affecter
                        </button>
                    </div>
                </form>

            </div>



            <div class="col-sm-12 panel-body" style="text-align:left;background-color: #5D9AD4;margin-top: 0 0;padding: 5px 30px;color: #ffffff;font-size: 13px;font-weight: bold;">
                Rechercher
            </div>

            <div class="col-sm-12 panel-body" style="text-align: center;">
                <form class="form-horizontal">
                    <input type="hidden" name="identifiant_user" value="{$identifiant_user}"/>
                    <input type="hidden" name="validation"  value="rechuser" />
                    <input type="hidden" name="actiontranche" value=""/>
                    <div class="form-group">
                        <label for="inputEmail3" class="col-sm-2 control-label">Rechercher un utilisateur</label>
                        <div class="col-sm-10">
                         <input type="text" name="recherche" >
                        </div>
                    </div>
                    <div class="form-group">
                        <button class="btn vd_btn vd_bg-green" type="submit" style="margin-top:15px;">
                            Rechercher
                        </button>
                    </div>
                </form>

            </div>


            <div id='declenchement_planning_liste' style="">
                <div class="row">
                    <div class="col-md-12">
                        <div class="panel widget">
                            <div class="panel-body-list  table-responsive">
                                <form class="form-horizontal" method="POST">
                                    <input type="hidden" name="identifiant_user" value="{$identifiant_user}"/>
                                    <input type="hidden" name="validation"  value="desaffecte" />
                                    <input type="hidden" name="actiontranche" value=""/>
                                <table class="table table-striped table-hover no-head-border">
                                    <thead class="vd_bg-color vd_white">
                                    <tr>
                                        <th><input
                                                    type="checkbox"
                                                    class=""
                                                    name="id_checkAll_dispo"
                                                    value=""
                                                    id="id_checkAll_dispo"
                                            >
                                            <label for="id_checkAll_dispo"> Tous </label></th>
                                        <th>Nom</th>
                                        <th>Prénom</th>
                                        <th>Email</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {foreach from=$aTableauListeUserSelect item=objuser}
                                        <tr>
                                            <td>
                                                <input type="checkbox" class="class_checkAll_dispo" value="{$objuser.id_user}" name="tabselect[]" >
                                            </td>
                                            <td> {$objuser.nom_user}</td>
                                            <td> {$objuser.prenom_user} </td>
                                            <td> {$objuser.email_user} </td>
                                        </tr>
                                    {/foreach}
                                    <tr>
                                        <td colspan="4" align="center">
                                            <button class="btn vd_btn vd_bg-green" type="submit" style="margin-top:15px;">Désaffecter les personnes cochées</button>
                                        </td>
                                    </tr>
                                    </tbody>
                                </table>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {literal}
        <script type="text/javascript">
            $(function () {
                $("#id_checkAll_dispo").click(function () {
                    if ($("#id_checkAll_dispo").is(':checked')) {

                      $(".class_checkAll_dispo").each(function () {
                          $(this).prop("checked", true);
                        });
                    } else {
                        $(".class_checkAll_dispo").each(function () {
                            $(this).prop("checked", false);
                        });
                    }
                });
            });

            // In your Javascript (external .js resource or <script> tag)
            $(document).ready(function() {
                $('.js-example-basic-multiple').select2();
            });
        </script>
